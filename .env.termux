# ============================================
# AI Art Revenue Exchange - Termux Environment
# Optimized for Android/Termux deployment
# ============================================

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
FRONTEND_PORT=3001

# Database (Termux PostgreSQL)
# Use localhost for local Termux PostgreSQL
DATABASE_URL=postgresql://postgres@localhost:5432/ai_art_exchange?schema=public
DATABASE_POOL_SIZE=5
DATABASE_POOL_TIMEOUT=10000

# Redis (Termux Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=100mb
REDIS_EVICTION_POLICY=allkeys-lru

# Security (Will be auto-generated by setup-env.js)
JWT_SECRET=CHANGE_ME_WILL_BE_AUTO_GENERATED
JWT_REFRESH_SECRET=CHANGE_ME_WILL_BE_AUTO_GENERATED
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
ENCRYPTION_KEY=CHANGE_ME_WILL_BE_AUTO_GENERATED
COOKIE_SECRET=CHANGE_ME_WILL_BE_AUTO_GENERATED

# CORS - Allow local access
ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# Rate Limiting (Reduced for Termux)
THROTTLE_TTL=60000
THROTTLE_LIMIT=50
THROTTLE_STRICT_MODE=false

# AWS/S3 (Optional - can use local storage)
# Leave empty to disable S3 and use local file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=/data/data/com.termux/files/home/ai-art/uploads

# Stripe (Optional for testing)
# Use test keys or leave empty to disable payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
ENABLE_PAYMENTS=false

# AI Service Configuration
# Ollama (if installed in proot-distro)
AI_API_URL=http://localhost:11434
AI_API_KEY=not-required-for-ollama
OLLAMA_MODEL=llava
ENABLE_AI_GENERATION=false

# Stable Diffusion (NOT recommended for Termux)
# Use external API or leave empty to disable
SD_API_URL=
SD_DEFAULT_STEPS=20
SD_DEFAULT_CFG_SCALE=7
SD_DEFAULT_SAMPLER=DPM++ 2M Karras
ENABLE_SD_GENERATION=false

# Admin Configuration
ADMIN_WALLET_ID=00000000-0000-0000-0000-000000000000
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=changeme123

# Platform Settings
PLATFORM_FEE_PERCENT=10
ADMIN_CLAIM_RATIO_ENABLED=5
ADMIN_CLAIM_RATIO_DISABLED=2

# Mature Content
MATURE_CONTENT_ENABLED=true
AGE_VERIFICATION_REQUIRED=true

# Logging (Reduced for Termux)
LOG_LEVEL=info
LOG_FILE_PATH=/data/data/com.termux/files/home/ai-art/logs
ENABLE_FILE_LOGGING=false

# Monitoring (Disabled for Termux)
SENTRY_DSN=
ENABLE_MONITORING=false

# Feature Flags (Optimized for Termux)
ENABLE_DATA_MONETIZATION=false
ENABLE_ADS=false
ENABLE_REFERRALS=true
ENABLE_CHALLENGES=true

# Performance Optimization for Termux
NODE_OPTIONS=--max-old-space-size=512
WEB_CONCURRENCY=1
UV_THREADPOOL_SIZE=2

# Development Mode
ENABLE_SWAGGER=true
ENABLE_DEBUG=true

# Termux-Specific Settings
TERMUX_DEPLOYMENT=true
SKIP_DOCKER=true
USE_SQLITE_FALLBACK=false

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_TELEMETRY_DISABLED=1
