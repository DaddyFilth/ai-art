              "mode": "raw",
              "raw": "{\n  \"assetId\": \"{{asset_id}}\",\n  \"startingPrice\": 10.00,\n  \"reservePrice\": 50.00,\n  \"buyNowPrice\": 100.00,\n  \"endsAt\": \"2026-12-31T23:59:59Z\"\n}"
